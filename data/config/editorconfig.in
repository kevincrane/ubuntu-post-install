# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# indent style
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true


# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Makefile
[Makefile]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false

# HTML files
[*.html]
indent_size = 2